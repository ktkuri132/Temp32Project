{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "$(zap)烧录",
      "type": "shell",
      "command": "python",
      "args": [
        "${workspaceFolder}/tool/download.py"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "$(tools)构建配置",
      "type": "shell",
      "command": "python",
      "args": [
        "${workspaceFolder}/tool/build.py",
        "--no-interactive"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "$(eye)监视配置",
      "type": "shell",
      "command": "python",
      "args": [
        "${workspaceFolder}/tool/watch_config.py"
      ],
      "problemMatcher": [],
      "group": "none",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "label": "$(gear)环境配置",
      "type": "shell",
      "command": "python",
      "args": [
        "${workspaceFolder}/tool/env_setup.py"
      ],
      "problemMatcher": [],
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "$(check)验证环境",
      "type": "shell",
      "command": "python",
      "args": [
        "${workspaceFolder}/tool/env_setup.py",
        "--verify"
      ],
      "problemMatcher": [],
      "group": "none"
    },
    {
      "label": "$(eye)监视环境配置",
      "type": "shell",
      "command": "python",
      "args": [
        "${workspaceFolder}/tool/watch_env.py"
      ],
      "problemMatcher": [],
      "group": "none",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      }
    }
  ]
}