{
  "project": {
    "name": "General_template_Project",
    "chip": "STM32F4",
    "board": "BLUEPILL",
    "architecture": "cortex-m4",
    "instruction_set": "thumb",
    "float_type": "硬件浮点 (FPU: fpv4-sp-d16)"
  },
  "toolchain": {
    "c_compiler": "arm-none-eabi-gcc",
    "cxx_compiler": "arm-none-eabi-g++",
    "asm_compiler": "arm-none-eabi-gcc",
    "ar": "arm-none-eabi-ar",
    "objcopy": "arm-none-eabi-objcopy",
    "size": "arm-none-eabi-size"
  },
  "build": {
    "optimization": "O0",
    "debug_info": "g3",
    "warnings": false,
    "wall": false,
    "werror": false,
    "stack_usage": true
  },
  "linker": {
    "specs": [
      "nosys.specs",
      "nano.specs"
    ],
    "script": "BSP/stm32f4/CORE/stm32f4xx.ld",
    "gc_sections": true,
    "map_file": true,
    "printf_float": true,
    "scanf_float": true,
    "additional_scripts": [
      "Driver_Framework/linker/df_init_sections.ld"
    ]
  },
  "defines": [
    "LOG_USE_COLOR",
    "STM32F40_41xxx",
    "STM32F10X_MD"
  ],
  "download": {
    "interface": "cmsis-dap",
    "target": "stm32f4x",
    "speed": "50000"
  },
  "files": {
    "sources": [
      "app/control.c",
      "app/init.c",
      "app/main.c",
      "app/test_auto_init.c",
      "Control/filter.c",
      "Control/pid.c",
      "Driver_Framework/dev_frame.c",
      "Driver_Framework/df_init.c",
      "Driver_Framework/df_log.c",
      "Driver_Framework/display/df_display.c",
      "Driver_Framework/i2c/df_iic.c",
      "Driver_Framework/irq/df_irq.c",
      "Driver_Framework/key/df_key.c",
      "Driver_Framework/lcd/df_fonts.c",
      "Driver_Framework/lcd/df_lcd.c",
      "Driver_Framework/spi/df_spi.c",
      "Middleware/shell/shell.c",
      "Middleware/trans/stde.c",
      "Middleware/trans/terminal_link.c"
    ],
    "headers": [],
    "include_dirs": [
      "Middleware",
      "Driver_Framework",
      "Driver_Framework/spi",
      "Driver_Framework/i2c",
      "Driver_Framework/irq",
      "Control",
      "Middleware/trans",
      "app",
      "Driver_Framework/display",
      "Middleware/shell",
      "Driver_Framework/lcd",
      "Driver_Framework/key"
    ],
    "subdirs": [],
    "static_libraries": []
  },
  "bsp": {
    "chip_dir": "stm32f4",
    "sources": [
      "stm32f4/CORE/startup_stm32f40_41xxx.c",
      "stm32f4/CORE/stm32f4xx_it.c",
      "stm32f4/CORE/system_stm32f4xx.c",
      "stm32f4/Driver/adc.c",
      "stm32f4/Driver/delay.c",
      "stm32f4/Driver/i2c_bus.c",
      "stm32f4/Driver/i2c_dev.c",
      "stm32f4/Driver/led.c",
      "stm32f4/Driver/misc.c",
      "stm32f4/Driver/nvic.c",
      "stm32f4/Driver/Systick.c",
      "stm32f4/Driver/usart.c"
    ],
    "include_dirs": [
      "BSP/CMSIS/Core/Include",
      "BSP/CMSIS/Core/Include/a-profile",
      "BSP/CMSIS/Core/Include/m-profile",
      "BSP/CMSIS/Core/Include/r-profile",
      "BSP/stm32f4/CORE",
      "BSP/stm32f4/Driver"
    ]
  },
  "devices": {
    "bmp280": {
      "enabled": true,
      "sources": [
        "bmp280/bmp280.c"
      ],
      "include_dirs": [
        "Device/bmp280"
      ]
    },
    "hmc588": {
      "enabled": true,
      "sources": [
        "hmc588/hmc588.c"
      ],
      "include_dirs": [
        "Device/hmc588"
      ]
    },
    "mpu6050": {
      "enabled": true,
      "sources": [
        "mpu6050/inv_mpu.c",
        "mpu6050/inv_mpu_dmp_motion_driver.c"
      ],
      "include_dirs": [
        "Device/mpu6050"
      ]
    },
    "sh1106": {
      "enabled": true,
      "sources": [
        "sh1106/fonts.c",
        "sh1106/sh1106.c"
      ],
      "include_dirs": [
        "Device/sh1106"
      ]
    },
    "ssd1306": {
      "enabled": false,
      "sources": [
        "ssd1306/fonts.c",
        "ssd1306/ssd1306.c"
      ],
      "include_dirs": [
        "Device/ssd1306"
      ]
    },
    "st7789": {
      "enabled": false,
      "sources": [
        "st7789/st7789.c"
      ],
      "include_dirs": [
        "Device/st7789"
      ]
    }
  }
}